{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "removeComments": true,
    "strictPropertyInitialization": false,
    "noImplicitAny": false,
    "baseUrl": ".",
    "paths": {
      "src/*": ["./src/*"]
    },
    "types": ["jest", "node"]
  },
  "include": ["src/**/*.ts", "server.ts", "jest.setup.ts"],
  "exclude": ["node_modules", "dist"]
}